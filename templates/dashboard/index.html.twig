{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard - Authentication Logs{% endblock %}

{% block body %}

<div class="row">
    <div class="col-12">
        <h1>Dashboard âœ…</h1>
    </div>
    <hr>
    <div class="col-12 mt-3">
        <div class="table-responsive">
            <table class="table">
                <thead>
                <tr>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Username</th>
                    <th>Message</th>
                    <th>Client IP</th>
                </tr>
                </thead>
                <tbody>
                {% for log in logs %}
                    <tr>
                        <td>{{ log.createdAt | date('d/m/y H:i:s') }}</td>
                        <td>{{ log.status }}</td>
                        <td>{{ log.user }}</td>
                        <td>{{ log.message }}</td>
                        <td>{{ log.clientIP }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>



</div>
{% endblock %}
